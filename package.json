{
  "name": "@llm-research/core",
  "version": "0.1.0",
  "description": "Layer-3 core integration bundle for LLM research capabilities - coordinates schema registry, simulator, and research lab",
  "type": "module",
  "main": "./dist/lib.js",
  "types": "./dist/lib.d.ts",
  "exports": {
    ".": {
      "types": "./dist/lib.d.ts",
      "import": "./dist/lib.js"
    },
    "./sdk": {
      "types": "./dist/sdk.d.ts",
      "import": "./dist/sdk.js"
    },
    "./cli": {
      "types": "./dist/cli.d.ts",
      "import": "./dist/cli.js"
    }
  },
  "bin": {
    "research-core": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "tsc --watch",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "llm",
    "research",
    "simulation",
    "schema",
    "evaluation",
    "coordination",
    "layer-3"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "claude-flow": "^2.7.47"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "typescript": "^5.9.3",
    "@jest/globals": "^29.0.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0"
  },
  "peerDependencies": {
    "@llm-research/schema-registry": "*",
    "@llm-research/simulator": "*",
    "@llm-research/research-lab": "*"
  },
  "peerDependenciesMeta": {
    "@llm-research/schema-registry": { "optional": true },
    "@llm-research/simulator": { "optional": true },
    "@llm-research/research-lab": { "optional": true }
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
